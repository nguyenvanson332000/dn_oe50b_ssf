
<% provide :title, t(".title") %>
<div class="col-6">
  <h1 class="text-center text-primary text-uppercase text-margin"><%= t ".title" %></h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field mt-3">
      <%= f.label :email, t(".email") %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field mt-3">
      <%= f.label :password, t(".password") %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-3">
        <%= f.check_box :remember_me, class: "remember_me" %>
        <%= f.label :remember_me, t(".remember") %>
      </div>
    <% end %>

    <div class="actions mt-3">
      <%= f.submit t(".login"), class: "btn btn-success" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
  <%= link_to fa_icon("facebook", text: t("links.login_fb")), user_facebook_omniauth_authorize_path,
   method: :post, class: "btn btn-primary float-right auth-form__socials" %><br>
  <%= link_to fa_icon("google", text: t("links.login_gg")), user_google_oauth2_omniauth_authorize_path,
   method: :post,  class: "btn btn-danger float-left auth-form__socials" %>
</div>
<%= render "users/shared/logo"%>
